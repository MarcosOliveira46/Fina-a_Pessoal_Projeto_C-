@model IEnumerable<Finance.Models.Despesa>

@{
    ViewBag.Title = "Index";
}

<h2>Despesas</h2>

<p>
    <button class="btn btn-success create" style="outline:none">Criar Despesa <i class="glyphicon glyphicon-open"></i></button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoDespesas.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_Despesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Despesa_Valor)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDespesas.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_Despesa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Despesa_Valor)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Despesa_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Despesa_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Despesa_Id })*@
                @*<button class="btn btn-success details" data-id="@item.Despesa_Id" style="outline:none"><i class="glyphicon glyphicon-file"></i></button>*@
                <button class="btn btn-danger delete" data-id="@item.Despesa_Id" style="outline:none"><i class="glyphicon glyphicon-trash"></i></button>
                <button class="btn btn-primary edit" data-id="@item.Despesa_Id" style="outline:none"><i class="glyphicon glyphicon-edit"></i></button>
            </td>
        </tr>
    }

</table>

<div id="modalDes" class="modal fade" role="dialog" />

@section scripts{
    <script>
        $(function () {
            $(".details").click(function () {
                var id = $(this).attr("data-id");
                /*alert(id);*/
                $("#modalDes").load("Despesas/Details?id=" + id, function () {//Receitas
                    $("#modalDes").modal();
                })
            });
            $(".edit").click(function () {
                var id = $(this).attr("data-id");
                /*alert(id);*/
                $("#modalDes").load("Despesas/Edit?id=" + id, function () {//Modificar quando der erro: Despesas/Edit?id=
                    $("#modalDes").modal();
                })
            });
            $(".delete").click(function () {
                var id = $(this).attr("data-id");
                /*alert(id);*/
                $("#modalDes").load("Despesas/Delete?id=" + id, function () {
                    $("#modalDes").modal();
                })
            });
           $(".create").click(function () {
               $("#modalDes").load("Despesas/Create", function () {
                   $("#modalDes").modal();
                })
            });
        })
    </script>
}
