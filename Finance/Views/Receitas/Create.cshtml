
@model Finance.Models.Receita
@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
@*==> se der erro retire: comente a linha 2 e coloque "@model Finance.Models.Receita"*@
<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Criar novo Cliente</h4>
            </div>

            @Html.AntiForgeryToken()
            <div class="modal-body">
                <div class="form-horizontal">
                    <h4>Receita</h4>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Receita_Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                    @*@Html.LabelFor(model => model.TipoDespesas, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @*<button type="button" class="btn btn-info tipoDespesa " style="outline:none"><i class="glyphicon glyphicon-plus"></i></button>*@



                        @Html.EnumDropDownListFor(model => model.Receita_Nome, htmlAttributes: new { @class = "form-control", style = "display: inline" })
                        @Html.ValidationMessageFor(model => model.Receita_Nome, "", new { @class = "text-danger" })<!--==> se der erro retire: descomente as duas linhas-->


                        @*@Html.DropDownListFor(model => model.IdTipoDespesa, Model.TipoDespesas, "--Selecione", new { @class = "form-control" })*@<!--==> se der erro retire-->

                    </div>
                </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Data_Entrada, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Data_Entrada, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Data_Entrada, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Receita_Valor, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Receita_Valor, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Receita_Valor, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" style="outline:none" value="Criar" class="btn btn-success" />
                        <input type="button" style="outline:none" value="Cancelar" class="btn btn-danger" data-dismiss="modal" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<div id="modalCreate" class="modal fade" role="dialog" />


