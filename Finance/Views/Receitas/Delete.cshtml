@model Finance.Models.Receita

@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}


@*<h3>Are you sure you want to delete this?</h3>*@
<div>
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Deseja deletar esta receita ?</h4>
            </div>

            <div class="modal-body">
                <h4>Receita</h4>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Receita_Nome)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Receita_Nome)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Data_Entrada)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Data_Entrada)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Receita_Valor)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Receita_Valor)
                    </dd>

                </dl>
            </div>

            <div class="modal-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" style="outline:none" value="Delete" class="btn btn-danger" />
                    <input type="button" style="outline:none" value="Voltar" class="btn btn-success" data-dismiss="modal" />
                    @*@Html.ActionLink("Voltar", "Index", "", htmlAttributes: new {@class = "btn btn-success"})*@
                </div>
                }
            </div>
        </div>
    </div>
</div>
