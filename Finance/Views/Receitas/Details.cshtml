@model Finance.Models.Receita

@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Detalhes</h4>
            </div>
                <div class="modal-body">
                    <h4>Receita</h4>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Receita_Nome)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Receita_Nome)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Data_Entrada)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Data_Entrada)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Receita_Valor)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Receita_Valor)
                        </dd>

                    </dl>
                </div>
                <div class="modal-footer">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.ReceitaId }, htmlAttributes: new { @class = "btn btn-success", style = "outline:none" })
                    <button type="button" style="outline:none" class="btn btn-danger" data-dismiss="modal">Fechar</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
